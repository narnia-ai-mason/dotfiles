bleopt char_width_mode=auto
bleopt input_encoding=UTF-8

bleopt edit_bell=vbell
bleopt vbell_default_message='âœ¨'
bleopt vbell_duration=2000

bleopt complete_auto_complete=1
bleopt complete_auto_delay=300

function my/filter_history {
  local command=$1

  case $command in
    ls|ll|la|pwd|clear|exit|cd) return 1 ;;
  esac

  case $command in
    *password*|*secret*|*token*|*key*) return 1 ;;
    export\ *PASSWORD*|export\ *SECRET*) return 1 ;;
    mysql\ -p*|psql\ *://*) return 1 ;;
  esac

  case $command in
    git\ status|git\ st|docker\ ps|podman\ ps) return 1 ;;
  esac

  return 0
}
blehook ADDHISTORY=my/filter_history

ble-face -s command_builtin fg=26
ble-face -s command_function fg=92
ble-face -s filename_directory fg=34,bold
